<header class="masthead mb-auto">
    <div class="inner">
      <h3 class="masthead-brand"><%= link_to 'CarRent', root_path %></h3>
      <nav class="nav nav-masthead justify-content-center">
        <%= link_to 'Cars', cars_path, class: "nav-link" %>
        <%= link_to 'Contact', root_path, class: "nav-link" %>
        <% if current_user %>
          <%= link_to 'Orders', root_path, class: "nav-link" %>
        <% end %>
        <%= content_tag(
          :div, '',
          class: 'nav-link login',
          data: {
            props: {
              user_logged: current_user
            }
          }
        ) %>
      </nav>
    </div>
  </header>